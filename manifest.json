{
  "manifest_version": 3,
  "name": "Hazel",
  "description": "A Chrome extension to visualize and analyze data on coco",
  "version": "1.0",
  "permissions": [
    "cookies",
    "*://admin.nugu.jp/*",
    "*://www.nugu.jp/*"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "host_permissions": [
    "*://admin.nugu.jp/*",
    "*://www.nugu.jp/*"
  ]
}
